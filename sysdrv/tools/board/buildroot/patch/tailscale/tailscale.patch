+################################################################################
+#
+# tailscale - zero-config VPN using WireGuard
+#
+# Built from source with --extra-small tags to minimize binary size:
+#   ts_omit_aws        - omit AWS/cloud provider metadata detection
+#   ts_omit_bird       - omit BIRD routing daemon integration
+#   ts_omit_tap        - omit TAP/userspace networking support
+#   ts_omit_kube       - omit Kubernetes integration
+#   ts_omit_completion - omit shell completion code
+#
+################################################################################
+
+TAILSCALE_VERSION = 1.70.0
+TAILSCALE_SITE    = $(call github,tailscale,tailscale,v$(TAILSCALE_VERSION))
+
+TAILSCALE_LICENSE       = BSD-3-Clause
+TAILSCALE_LICENSE_FILES = LICENSE
+
+# Go arch mapping
+ifeq ($(ARCH),arm)
+TAILSCALE_GOARCH = arm
+TAILSCALE_GOARM  = 7
+else ifeq ($(ARCH),aarch64)
+TAILSCALE_GOARCH = arm64
+TAILSCALE_GOARM  =
+else ifeq ($(ARCH),x86_64)
+TAILSCALE_GOARCH = amd64
+TAILSCALE_GOARM  =
+else
+TAILSCALE_GOARCH = $(ARCH)
+TAILSCALE_GOARM  =
+endif
+
+TAILSCALE_GOENV = \
+	CGO_ENABLED=0 \
+	GOOS=linux \
+	GOARCH=$(TAILSCALE_GOARCH) \
+	$(if $(TAILSCALE_GOARM),GOARM=$(TAILSCALE_GOARM)) \
+	GOPROXY=https://proxy.golang.org,direct \
+	GONOSUMDB='*' \
+	GOFLAGS=-mod=mod
+
+# --extra-small build tags
+TAILSCALE_TAGS = ts_omit_aws,ts_omit_bird,ts_omit_tap,ts_omit_kube,ts_omit_completion,ts_omit_systray,ts_omit_taildrop
+
+define TAILSCALE_BUILD_CMDS
+	cd $(@D) && go mod edit \
+		-replace nhooyr.io/websocket@v1.8.10=github.com/coder/websocket@v1.8.10
+	cd $(@D) && $(TAILSCALE_GOENV) go build \
+		-tags "$(TAILSCALE_TAGS)" \
+		-ldflags "-s -w" \
+		-o $(@D)/tailscale \
+		tailscale.com/cmd/tailscale
+	cd $(@D) && $(TAILSCALE_GOENV) go build \
+		-tags "$(TAILSCALE_TAGS)" \
+		-ldflags "-s -w" \
+		-o $(@D)/tailscaled \
+		tailscale.com/cmd/tailscaled
+endef
+
+define TAILSCALE_INSTALL_TARGET_CMDS
+	$(INSTALL) -D -m 0755 $(@D)/tailscale \
+		$(TARGET_DIR)/usr/bin/tailscale
+	$(INSTALL) -D -m 0755 $(@D)/tailscaled \
+		$(TARGET_DIR)/usr/sbin/tailscaled
+endef
+
+$(eval $(generic-package))
