+################################################################################
+#
+# tailscale - zero-config VPN using WireGuard
+#
+# Uses pre-built static binaries from https://pkgs.tailscale.com/stable/
+# Update TAILSCALE_VERSION to the latest stable release as needed.
+#
+################################################################################
+
+TAILSCALE_VERSION = 1.80.0
+
+ifeq ($(ARCH),arm)
+TAILSCALE_ARCH = arm
+else ifeq ($(ARCH),aarch64)
+TAILSCALE_ARCH = arm64
+else ifeq ($(ARCH),x86_64)
+TAILSCALE_ARCH = amd64
+else
+TAILSCALE_ARCH = $(ARCH)
+endif
+
+TAILSCALE_SOURCE = tailscale_$(TAILSCALE_VERSION)_$(TAILSCALE_ARCH).tgz
+TAILSCALE_SITE   = https://pkgs.tailscale.com/stable
+
+TAILSCALE_LICENSE = BSD-3-Clause
+TAILSCALE_LICENSE_FILES = LICENSE
+
+define TAILSCALE_INSTALL_TARGET_CMDS
+	$(INSTALL) -D -m 0755 $(@D)/tailscale \
+		$(TARGET_DIR)/usr/bin/tailscale
+	$(INSTALL) -D -m 0755 $(@D)/tailscaled \
+		$(TARGET_DIR)/usr/sbin/tailscaled
+endef
+
+$(eval $(generic-package))
