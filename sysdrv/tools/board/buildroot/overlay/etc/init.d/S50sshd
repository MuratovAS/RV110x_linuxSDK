#!/bin/sh
#
# sshd        Starts sshd.
#

# Make sure the ssh-keygen progam exists
[ -f /usr/bin/ssh-keygen ] || exit 0

umask 077

start() {
	chown root:root /var/empty/

	# Store host keys in userdata (persistent across firmware updates)
	mkdir -p /userdata/ssh
	chmod 700 /userdata/ssh
	for type in rsa ecdsa ed25519; do
		key="/userdata/ssh/ssh_host_${type}_key"
		[ -f "$key" ] || /usr/bin/ssh-keygen -t "$type" -f "$key" -N ""
	done

	printf "Starting sshd: "
	/usr/sbin/sshd
	touch /var/lock/sshd
	echo "OK"
}
stop() {
	printf "Stopping sshd: "
	killall sshd
	rm -f /var/lock/sshd
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
